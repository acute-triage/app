import "../../Fastfile"

default_platform(:android)

platform :android do
  private_lane :build_apk do
    # Reuse parent fastfile tasks
    fetch_dependencies
    build_autogenerated_code

    sh_on_root(command: "flutter build apk --release")
  end

  lane :build do
    # Reuse parent fastfile tasks
    fetch_dependencies
    build_autogenerated_code

    sh_on_root(command: "flutter build appbundle --no-pub --release --suppress-analytics")
  end

  desc "Release to Play Store"
  lane :closed_beta do
    begin
      build

      firebase_app_distribution(
        app: ENV["FIREBASE_APP_ID"],
        service_credentials_file: 'firebase_app_distribution_service_account.json',
      )
    end
  end
end